<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ pageTitle }}{% endblock %} - NorthShore</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">




    <!-- Custom CSS -->
    <link rel="stylesheet" href="/static/css/dashboard.css">

    {% block head %}{% endblock %}
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="logo-container">
                <div class="logo">
                    <i class="fa-solid fa-circle-notch"></i>
                    <span>NorthShore</span>
                </div>
                <button class="toggle-sidebar-btn">
                    <i class="fa-solid fa-chevron-left"></i>
                </button>
            </div>

            <div class="create-project-btn">
                <i class="fa-solid fa-plus"></i>
                <span>Create a new project</span>
            </div>

            <nav class="sidebar-nav">
                <ul>
                    <li class="active">
                        <a href="/dashboard">
                            <i class="fa-solid fa-th-large"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/projects">
                            <i class="fa-solid fa-briefcase"></i>
                            <span>Projects</span>
                        </a>
                    </li>
                    <li>
                        <a href="/tasks">
                            <i class="fa-solid fa-tasks"></i>
                            <span>Tasks</span>
                        </a>
                    </li>
                    <li>
                        <a href="/time-log">
                            <i class="fa-regular fa-clock"></i>
                            <span>Time log</span>
                        </a>
                    </li>
                    <li>
                        <a href="/resources">
                            <i class="fa-solid fa-users"></i>
                            <span>Resource mgnt</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="help-button">
                <i class="fa-solid fa-question-circle"></i>
            </div>
        </aside>

        <main class="main-content">
            <header class="main-header">
                <h1 class="page-title">{# @pebvariable name="pageTitle" type="String" #}{{ pageTitle }}</h1>

                <div class="header-actions">
                    <div class="search-container">
                        <i class="fa-solid fa-search"></i>
                        <input type="text" placeholder="Search for anything...">
                    </div>

                    <div class="notifications">
                        <i class="fa-regular fa-bell"></i>
                    </div>

                    <div class="user-profile">
                        <div class="user-avatar">
                            <img src="https://ui-avatars.com/api/?name={{ currentUser.name }}&background=0D8ABC&color=fff" alt="{{ currentUser.name }}">
                        </div>
                        <div class="user-info">
                            <div class="user-name">{{ currentUser.name }}</div>
                            <div class="user-role">{{ currentUser.role }}</div>
                        </div>
                        <i class="fa-solid fa-chevron-down"></i>
                    </div>
                </div>
            </header>

            <div class="content-area">
                {% block content %}
                {% endblock %}
            </div>
        </main>
    </div>

    <script src="/static/js/dashboard.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>